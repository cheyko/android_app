<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/burly_wood"
    android:gravity="bottom"
    android:paddingVertical="10dp"
    android:paddingHorizontal="3dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <include
        android:id="@+id/the_grid"
        layout="@layout/nav_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/usernameLabel"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:drawableTint="@color/burly_wood"
        android:drawableRight="@drawable/ic_user_cog"
        android:onClick="onMenuBtnSelected"
        android:paddingVertical="1dp"
        android:paddingHorizontal="3dp"
        android:text="USERNAME"
        android:layout_gravity="center"
        android:textColor="@color/burly_wood"
        android:textStyle="bold"
        android:textSize="20dp"
        android:background="@color/royal_blue"/>
<androidx.cardview.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="120dp"
    android:layout_height="140dp"
    android:elevation="10dp"
    android:layout_margin="7dp"
    android:padding="0dp"
    card_view:cardCornerRadius="45dp"
    android:layout_gravity="center">
        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="center"
            />
</androidx.cardview.widget.CardView>


    <include
        android:id="@+id/the_grid"
        layout="@layout/nav_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="@mipmap/ic_launcher" />

</LinearLayout>